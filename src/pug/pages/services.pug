extends ../_template

mixin index-services__item(pic, text)
  a(href="service.html" class='index-services__item' style='background-image: url(\'assets/img/index-services-' + pic + '.jpg\');')
    span.index-services__text #{text}

block variables
  - var title           = 'Services | Glen Burnie Dental Group'
  - var description     = 'Services | Glen Burnie Dental Group'
  - var ogtitle         = 'Services | Glen Burnie Dental Group'
  - var ogimage         = 'assets/img/social.jpg'
  - var pageHeader      = 'Services'

block content
  .main-wrap
    include ../sections/header
    //begin page-header
    .page-header
      .page-header__img(style="background-image: url('assets/img/page-header-services.jpg');")
      .container
        h2.title.page-header__title #{pageHeader}
    //end page-header

    //begin content
    main.main.services
      //begin index-services
      .index-services
        +index-services__item('01', 'Dental Crown')
        +index-services__item('02', 'Teeth Cleaning')
        +index-services__item('03', 'Snap-On Dentures')
        +index-services__item('04', 'Periodontics')
        +index-services__item('05', 'Whitening')
        +index-services__item('01', 'Dental Implant')
        +index-services__item('01', 'Root Canal')
        +index-services__item('02', 'Restorative')
        +index-services__item('03', 'Cosmetic Dentistry')
        +index-services__item('04', 'Oral surgery')
        +index-services__item('05', 'Orthodontics')
      //end index-services
    //end content

    include ../sections/footer
    include ../sections/scripts